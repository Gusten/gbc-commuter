<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="center"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/app_name"
        android:text="Track new route"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:gravity="center"/>
    <AutoCompleteTextView
        android:id="@+id/modal_from"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/modal_from_hint" />
    <AutoCompleteTextView
        android:id="@+id/modal_to"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/main_from_location"
        android:hint="@string/modal_to_hint" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/modal_lines_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center">

        <CheckBox
            android:id="@+id/modal_checkbox_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toStartOf="@+id/modal_checkbox_tuesday"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monday_short"
            app:layout_constraintBottom_toBottomOf="@+id/modal_checkbox_monday"
            app:layout_constraintEnd_toEndOf="@+id/modal_checkbox_monday"
            app:layout_constraintStart_toStartOf="@+id/modal_checkbox_monday"
            app:layout_constraintTop_toTopOf="@+id/modal_checkbox_monday" />

        <CheckBox
            android:id="@+id/modal_checkbox_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toStartOf="@+id/modal_checkbox_wednesday" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tuesday_short"
            app:layout_constraintBottom_toBottomOf="@+id/modal_checkbox_tuesday"
            app:layout_constraintEnd_toEndOf="@+id/modal_checkbox_tuesday"
            app:layout_constraintStart_toStartOf="@+id/modal_checkbox_tuesday"
            app:layout_constraintTop_toTopOf="@+id/modal_checkbox_tuesday" />

        <CheckBox
            android:id="@+id/modal_checkbox_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toStartOf="@+id/modal_checkbox_thursday" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wednesday_short"
            app:layout_constraintBottom_toBottomOf="@+id/modal_checkbox_wednesday"
            app:layout_constraintEnd_toEndOf="@+id/modal_checkbox_wednesday"
            app:layout_constraintStart_toStartOf="@+id/modal_checkbox_wednesday"
            app:layout_constraintTop_toTopOf="@+id/modal_checkbox_wednesday" />

        <CheckBox
            android:id="@+id/modal_checkbox_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toStartOf="@+id/modal_checkbox_friday" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thursday_short"
            app:layout_constraintBottom_toBottomOf="@+id/modal_checkbox_thursday"
            app:layout_constraintEnd_toEndOf="@+id/modal_checkbox_thursday"
            app:layout_constraintStart_toStartOf="@+id/modal_checkbox_thursday"
            app:layout_constraintTop_toTopOf="@+id/modal_checkbox_thursday" />

        <CheckBox
            android:id="@+id/modal_checkbox_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toStartOf="@+id/modal_checkbox_saturday" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friday_short"
            app:layout_constraintBottom_toBottomOf="@+id/modal_checkbox_friday"
            app:layout_constraintEnd_toEndOf="@+id/modal_checkbox_friday"
            app:layout_constraintStart_toStartOf="@+id/modal_checkbox_friday"
            app:layout_constraintTop_toTopOf="@+id/modal_checkbox_friday" />

        <CheckBox
            android:id="@+id/modal_checkbox_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toStartOf="@+id/modal_checkbox_sunday" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saturday_short"
            app:layout_constraintBottom_toBottomOf="@+id/modal_checkbox_saturday"
            app:layout_constraintEnd_toEndOf="@+id/modal_checkbox_saturday"
            app:layout_constraintStart_toStartOf="@+id/modal_checkbox_saturday"
            app:layout_constraintTop_toTopOf="@+id/modal_checkbox_saturday" />

        <CheckBox
            android:id="@+id/modal_checkbox_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sunday_short"
            app:layout_constraintBottom_toBottomOf="@+id/modal_checkbox_sunday"
            app:layout_constraintEnd_toEndOf="@+id/modal_checkbox_sunday"
            app:layout_constraintStart_toStartOf="@+id/modal_checkbox_sunday"
            app:layout_constraintTop_toTopOf="@+id/modal_checkbox_sunday" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>